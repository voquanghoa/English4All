<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_title_height"
    android:background="@color/app_title"
    android:orientation="vertical"
    android:padding="@dimen/app_title_padding"
    >
    <voon.truongvan.english_for_all_level.control.EffectfulImageView
        android:id="@+id/action_facebook"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:src="@drawable/facebook"
        />
    <voon.truongvan.english_for_all_level.control.EffectfulImageView
        android:id="@+id/action_google"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/app_title_icon_space"
        android:layout_toLeftOf="@+id/action_facebook"
        android:adjustViewBounds="true"
        android:src="@drawable/google"
        />
    <voon.truongvan.english_for_all_level.control.EffectfulImageView
        android:id="@+id/app_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_launcher"
        />
    <TextView
        android:id="@+id/left_title"
        style="@style/AppTitleText"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/app_title_text_space"
        android:layout_toRightOf="@id/app_icon"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/center_title"
        style="@style/AppTitleText"
        android:layout_centerInParent="true"
        />
</RelativeLayout><!-- From: file:/F:/Soure_lam_app/Lamviec/Lamviec/Lamviec/List_view_Object/app/src/main/res/layout/app_title.xml -->