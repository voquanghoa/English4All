<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="voon.truongvan.english_for_all_level"
    android:versionCode="11"
    android:versionName="2.0">

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.EnglishForAllLevelApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".StudyOfflineActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".GrammarActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".QuestionListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".ExaminationActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".ContestActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity android:name=".RankingActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
    </application>
</manifest>
