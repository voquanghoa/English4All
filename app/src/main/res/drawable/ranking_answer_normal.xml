<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#2A00FF00" />
            <stroke
                android:width="1dp"
                android:color="#FFF" />
            <corners
                android:radius="@dimen/ranking_answer_button_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#1AFFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#FFF" />
            <corners
                android:radius="@dimen/ranking_answer_button_radius" />
        </shape>
    </item>
</selector>