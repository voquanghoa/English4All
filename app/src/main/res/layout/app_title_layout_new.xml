<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_title_height"
    android:background="@color/app_title_background"
    android:orientation="vertical"
    android:padding="@dimen/app_title_padding"
    >
    <voon.truongvan.english_for_all_level.control.EffectImageView
        android:id="@+id/app_title_back"
        style="@style/AppTitleIcon"
        />
    <TextView
        android:id="@+id/txt_title"
        style="@style/AppTitleText"
        android:layout_toLeftOf="@+id/app_title_back_holder"
        android:layout_toRightOf="@+id/app_title_back" />

    <voon.truongvan.english_for_all_level.control.EffectImageView
        android:id="@+id/app_title_back_holder"
        style="@style/AppTitleIcon"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        />
</RelativeLayout>